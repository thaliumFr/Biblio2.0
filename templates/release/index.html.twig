{% extends 'base.html.twig' %}

{% block title %}
  Release index
{% endblock %}

{% block body %}
  <h1>Release index</h1>

  <div class="row g-2 mb-4">
    {% for release in releases %}
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card">
          <div class="ratio ratio-1x1">
            <img class="card-img-top" src="{{ release.thumbnailUrl }}" alt="{{ release.title }}'s cover" />
          </div>
          <div class="card-body">
            <h5 class="card-title">{{ release.title }}</h5>
            <p class="card-text">{{ release.releasedAt|date('d M Y') }}</p>
            <p class="card-text">{{ release.tracks|length }} songs for {{ release.getReadableDuration }} of auditory pleasure</p>
            <a href="{{ path('app_release_show', { id: release.id }) }}" class="btn btn-primary">Show album</a>
          </div>
        </div>
      </div>
    {% else %}
      <tr>
        <td colspan="4">no records found</td>
      </tr>
    {% endfor %}
  </div>

  <a href="{{ path('app_release_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
