{% extends 'base.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}
    <h1>Artist index</h1>

    <div class="row g-2 mb-4">
        {% for artist in artists %}
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card">
                  <div class="ratio ratio-1x1">
                    <img class="card-img-top" src="{{ artist.thumbnailUrl }}" alt="{{ artist.name }}'s Profile Picture">
                  </div>
                  <div class="card-body">
                    <h5 class="card-title">{{ artist.name }}</h5>
                    <a href="{{ path('app_artist_show', {'id': artist.id}) }}" class="btn btn-primary">Show artist</a>
                  </div>
                </div>
            </div>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
    </div>

    <a href="{{ path('app_artist_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
